{
    "extends": "../tslint.json",
    "rules": {
        "component-class-suffix": [
          true,
          "Component",
          "Page",
          "Shell"
        ],
        "directive-selector": [
            true,
            "attribute",
            "ncg",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "ncg",
            "kebab-case"
        ]
    }
}
